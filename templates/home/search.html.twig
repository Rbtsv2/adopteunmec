
{% extends 'layout/base.html.twig' %}

{% block body %}
 <style>

</style>   

  <div class="container">


  <div class="form-check form-check-inline">
    <input id='femme' class="form-check-input" type="checkbox" id="inlineCheckbox1" value="0" checked="checked">
    <label class="form-check-label" for="inlineCheckbox1">Femmes</label>
  </div>
  <div class="form-check form-check-inline">
    <input id='homme' class="form-check-input" type="checkbox" id="inlineCheckbox2" value="1" checked="checked">
    <label class="form-check-label" for="inlineCheckbox2">Hommes</label>
    <div class="col" style='margin-left:20px'>
      <input id="slider1" type="text" class="span2" value="" data-slider-min="18" data-slider-max="99" data-slider-step="1" data-slider-value="[18,35]"/>
    </div>

  </div>
  
  <input type="search" class="form-control" name="search" id="search" data-rule="search" placeholder="Exemple : Aurelien  32 ans Paris" />
  
  <hr class="mt-2 mb-5">

  <div class="row text-center text-lg-left gallery">

  {% for user in users %}       
      <div class="col-lg-3 col-md-4 col-6 profile">
        <a href="/product/{{user.urlid}}" class="d-block mb-4 h-100">
              <img class="img-fluid img-thumbnail" src="{{user.avatar}}" alt="{{user.pseudo}}">
              <span style="color:black" >{{user.pseudo}} - {{user.age}} ans - {{user.city}}</span> 
        </a>
      </div>
  {% endfor %} 



   
  </div>

</div>


    
</div>
{% endblock %}